#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<string> nom;
    vector<double> nota;

    int opc;

    do {
        cout << "\n1) Agregar\n2) Listar\n3) Ordenar\n4) Mejor nota\n5) Promedio\n6) Salir\n";
        cin >> opc;

        if (opc == 1) {
            string n; double nt;
            cin >> n >> nt;
            nom.push_back(n);
            nota.push_back(nt);
        }

        if (opc == 2) {
            for (int i = 0; i < nom.size(); i++)
                cout << nom[i] << " - " << nota[i] << "\n";
        }

        if (opc == 3) {
            for (int i = 0; i < nom.size() - 1; i++) {
                for (int j = 0; j < nom.size() - 1 - i; j++) {
                    if (nom[j] > nom[j+1]) {
                        swap(nom[j], nom[j+1]);
                        swap(nota[j], nota[j+1]);
                    }
                }
            }
        }

        if (opc == 4) {
            if (nota.size() == 0) cout << "No hay alumnos\n";
            else {
                double best = nota[0];
                int pos = 0;
                for (int i = 1; i < nota.size(); i++)
                    if (nota[i] > best) {
                        best = nota[i];
                        pos = i;
                    }
                cout << nom[pos] << " - " << best << "\n";
            }
        }

        if (opc == 5) {
            double prom = 0;
            for (double x : nota) prom += x;
            if (nota.size() > 0)
                cout << prom / nota.size() << "\n";
            else
                cout << "No hay notas\n";
        }

    } while (opc != 6);
}
