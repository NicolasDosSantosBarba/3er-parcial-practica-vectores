#include <iostream>
#include <vector>
#include <cmath>
using namespace std;

int main() {
    int n;
    cin >> n;

    vector<double> v(n);
    for (int i = 0; i < n; i++) cin >> v[i];

    double mayor = fabs(v[1] - v[0]);

    for (int i = 1; i < n - 1; i++) {
        double dif = fabs(v[i+1] - v[i]);
        if (dif > mayor) mayor = dif;
    }

    cout << "Mayor diferencia = " << mayor;
}
